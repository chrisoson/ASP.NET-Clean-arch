@using Application.Dtos
<div class="flex flex-col w-72 group border border-blue-900 hover:border-sky-700 bg-white text-black shadow-md shadow-gray-300
            hover:bg-sky-500 hover:shadow-sky-500 rounded-md ring-1 hover:ring-sky-700 hover:shadow-xl">
    <div class="flex flex-row gap-5 p-4">
        <div class="flex flex-col flex-grow justify-between items-start">
            <a href="/user/@Item.Id" class="text-blue-900 group-hover:text-blue-950 underline text-xl font-extrabold capitalize">
                @Item.ItemType.Name
            </a>

            <span class="text-md text-gray-500 group-hover:text-white">
                $@Item.ItemType.Price.ToString("N2")
            </span>
        </div>

        <div class="w-12 h-12">
            <img src="@Item.ItemType.DisplayUrl" alt class="rounded-md" loading="lazy"/>
        </div>
    </div>

    <div class="flex flex-row  justify-between border-t-2 border-gray-300 group-hover:border-blue-900">
        <button class="flex flex-row justify-center text-green-700 group-hover:text-green-900 align-middle gap-3 w-full h-full p-2">
            <Heroicon Name="@HeroiconName.ChevronDown" Type="HeroiconType.Outline" class="w-6 h-6"/>
            <span class="font-extrabold">
                @Item.ItemType.MinRarity.ToString("N4")
            </span>
        </button>

        <div class="h-full border border-gray-300 group-hover:border-blue-900"></div>

        <button class="flex flex-row justify-center text-blue-700 group-hover:text-blue-900 align-middle gap-3 w-full h-full p-2">
            <Heroicon Name="@HeroiconName.ChevronUp" Type="HeroiconType.Outline" class="w-6 h-6"/>
            <span class="font-extrabold">
                @Item.ItemType.MaxRarity.ToString("N4")
            </span>
        </button>
    </div>
</div>

@code {

    [Parameter, EditorRequired]
    public ItemDto Item { get; set; } = default!;

}