<AuthorizeView>
    <Authorized>
        <NavLink ActiveClass="!text-black !bg-gray-200" href="/me"
                 class="flex flex-row gap-3 font-semibold rounded-md text-gray-300 hover:text-black bg-gray-800 hover:bg-gray-200 p-3">
            <Heroicon Name="@HeroiconName.User" Type="@HeroiconType.Outline" class="w-6 h-6"/>
        </NavLink>
    </Authorized>

    <NotAuthorized>
        <NavLink ActiveClass="!text-black !bg-gray-200" href="/auth"
                 class="flex flex-row gap-3 font-semibold rounded-md text-gray-300 hover:text-black bg-gray-800 hover:bg-gray-200 p-3">
            <Heroicon Name="@HeroiconName.ArrowRight" Type="@HeroiconType.Outline" class="w-6 h-6"/>
        </NavLink>
    </NotAuthorized>
</AuthorizeView>