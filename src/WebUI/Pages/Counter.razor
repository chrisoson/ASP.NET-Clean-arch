@page "/counter"

<div class="flex flex-col gap-3 text-center p-5 text-black dark:text-white">
    <h1 class="text-3xl sm:text-6xl font-extrabold">Counter</h1>

    <button @onclick="@Increment"
            class="flex flex-row justify-center rounded-md w-full py-2 px-4
                   bg-gradient-to-br from-blue-400 to-green-500
                   border-2 border-blue-300 active:border-blue-700
                   shadow-blue-300 shadow-lg">
        <p class="text-2xl font-extrabold">@_count</p>
    </button>
</div>


@code {

    int _count;

    void Increment()
    {
        _count++;
    }

}